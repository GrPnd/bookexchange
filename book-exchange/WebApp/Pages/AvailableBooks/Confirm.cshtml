@page
@model WebApp.Pages.AvailableBooks.Confirm

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Give Rating</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Rate the Book</h1>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="mb-3">
            <label class="form-label">Are you sure you want to take this book?:</label>
            <div>
                "@Model.Book!.Title" - @Model.Book!.AuthorFirstName @Model.Book!.AuthorLastName
                <div class="form-check form-check-inline">
                    <button type="submit" name="action" value="yes" class="btn btn-primary">Yes</button>
                    <button type="submit" name="action" value="no" class="btn btn-primary">No</button>
                </div>
            </div>
        </div>

    </form>
</div>
</body>
</html>