@page
@model WebApp.Pages.Userbooks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>UserBook</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserBook.Id" />
            <div class="form-group">
                
                <label asp-for="UserBook.Review" class="control-label"></label>
                <input asp-for="UserBook.Review" class="form-control" />
                <span asp-validation-for="UserBook.Review" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="UserBook.Rating" class="control-label"></label>
                <input asp-for="UserBook.Rating" class="form-control" />
                <span asp-validation-for="UserBook.Rating" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UserBook.IsOwner" /> @Html.DisplayNameFor(model => model.UserBook.IsOwner)
                </label>
            </div>
            <div class="form-group form-check">
                
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UserBook.WantTrade" /> @Html.DisplayNameFor(model => model.UserBook.WantTrade)
                </label>
            </div>
            <div class="form-group">
                
                <label asp-for="UserBook.UserId" class="control-label"></label>
                <select asp-for="UserBook.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserBook.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="UserBook.BookId" class="control-label"></label>
                <select asp-for="UserBook.BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="UserBook.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
